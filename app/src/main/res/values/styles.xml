<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="PopuWindow_AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="ShoppingCarBg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/shopping_car_bg_color</item>
    </style>
    <style name="ShoppingCarBtn">
        <item name="android:layout_width">@dimen/shopping_btn_wrap</item>
        <item name="android:layout_height">@dimen/shopping_btn_helght</item>
        <item name="android:background">@color/shopping_car_btn_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_size_26sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="ShoppingCarTxtBg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_26sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/shopping_txt_left</item>
    </style>
    <style name="ShoppingCarTxtNumBg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/margin_17dp</item>
    </style>
    <style name="AddressTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_size_18sp</item>
        <item name="android:paddingBottom">@dimen/margin</item>
        <item name="android:paddingTop">@dimen/margin</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AddressChildTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_10dp</item>
        <item name="android:textSize">@dimen/txt_size_18sp</item>
        <item name="android:background">@color/chile_txt_color</item>
    </style>
    <style name="AddAddressLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/margin_45dp</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_size_18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="AddAddressTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_size_18sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AddAddressEditView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_15dp</item>
        <item name="android:layout_marginRight">@dimen/margin_10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_size_18sp</item>
    </style>
    <style name="subScribeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/ser_order_hight</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_size_22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>
    <style name="subScribeAssignStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/margin_40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_size_20sp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="timeViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/margin_40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_size_20sp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="txtStyle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">@dimen/margin_40dp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/txt_size_24sp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_weight">1</item>
</style>
    <style name="buttonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/ico_car_have_width</item>
        <item name="android:textSize">@dimen/txt_size_22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="txtStyleWCMargin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/margin_40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_size_24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>
    <style name="txtStyleWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/margin_40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_size_24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>
</resources>
