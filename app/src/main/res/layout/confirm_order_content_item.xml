<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_content_cv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/order_number"
          android:layout_width="wrap_content"
          android:textSize="@dimen/txt_size_22sp"
          android:text="订单号：44555588963258966"
          android:layout_height="wrap_content" />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/order_price_count"
          android:layout_width="wrap_content"
          android:textSize="@dimen/txt_size_22sp"
          android:text="总价：￥ 38.0 元"
          android:layout_below="@+id/order_number"
          android:layout_height="wrap_content" />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/pay_status"
          android:layout_width="wrap_content"
          android:textSize="@dimen/txt_size_22sp"
          android:text="未支付"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/order_number"
          android:layout_marginRight="@dimen/margin_reight"
          android:layout_height="wrap_content" />

  </RelativeLayout>


</android.support.v7.widget.CardView>