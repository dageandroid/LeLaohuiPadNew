<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_content_cv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="@dimen/margin"
    app:cardMaxElevation="@dimen/margin_10dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/order_image"
            android:scaleType="fitCenter"
            android:layout_width="fill_parent"
            android:src="@drawable/add"
            android:layout_height="@dimen/llh_order_image_height"
            >
       </ImageView>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:textSize="@dimen/txt_size_22sp"
            android:text="服务名称：中心修改单次包"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_below="@+id/order_image"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/order_num_txt"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_width="wrap_content"
            android:textSize="@dimen/txt_size_20sp"
            android:text="订单号：1225562255522"
            android:layout_marginTop="@dimen/margin_top_10dp"
            android:layout_below="@+id/product_name"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/order_amount_txt"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_width="wrap_content"
            android:textSize="@dimen/txt_size_20sp"
            android:text="共1件"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/product_name"
            android:layout_marginTop="@dimen/margin_left_10dp"
            android:layout_marginRight="@dimen/margin_reight"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:textSize="@dimen/txt_size_22sp"
            android:text="价格：￥ 38.0 元"
            android:layout_below="@+id/order_num_txt"
            android:layout_marginTop="@dimen/margin_left_10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</android.support.v7.widget.CardView>