<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.AppCompatImageView
    android:id="@+id/subscribe_data_image"
    android:layout_width="@dimen/subscribe_img_width"
    android:src="@drawable/app"
    android:scaleType="fitXY"
    android:layout_centerVertical="true"
    android:layout_marginTop="@dimen/margin_top_15dp"
    android:layout_height="@dimen/subscribe_img_hight" />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:id="@+id/subscribe_time"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_24sp"
        android:text="预约时间：2016-01-01"
        android:layout_toRightOf="@+id/subscribe_data_image"
        android:layout_marginLeft="@dimen/margin_left_10dp"
        android:layout_marginTop="@dimen/margin_top"
        ></android.support.v7.widget.AppCompatTextView>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:id="@+id/subscribe_user"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_24sp"
        android:text="预约人：乐老汇"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin_left_10dp"
        android:layout_marginTop="@dimen/margin_top"
        ></android.support.v7.widget.AppCompatTextView>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:id="@+id/subscribe_server_time"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_24sp"
        android:layout_below="@+id/subscribe_time"
        android:text="服务时间：2016-01-01  10:30 到 11:30
         2016-01-01  10:30 到 11:30"
        android:layout_toRightOf="@+id/subscribe_data_image"
        android:layout_marginLeft="@dimen/margin_left_10dp"
        android:layout_marginTop="@dimen/margin_top_15dp"
        ></android.support.v7.widget.AppCompatTextView>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:id="@+id/server_name"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size_24sp"
        android:text="服务人员：张山  男  50岁 指派的  忙碌"
        android:layout_toRightOf="@+id/subscribe_data_image"
        android:layout_marginLeft="@dimen/margin_left_10dp"
        android:layout_marginTop="@dimen/margin_top_15dp"
        android:layout_below="@+id/subscribe_server_time"
        ></android.support.v7.widget.AppCompatTextView>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="@dimen/subscribe_btn_width"
        android:id="@+id/ctrl_server_subscribe"
        android:layout_height="@dimen/subscribe_btn_hight"
        android:textSize="@dimen/txt_size_24sp"
        android:gravity="center"
        android:text="预约"
        android:layout_alignBottom="@+id/subscribe_server_time"
        android:layout_toRightOf="@+id/subscribe_server_time"
        android:layout_toEndOf="@+id/subscribe_server_time">

    </android.support.v7.widget.AppCompatButton>

</RelativeLayout>
