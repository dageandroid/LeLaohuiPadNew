<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_8dp"
    android:paddingLeft="@dimen/margin_8dp"
            android:background="@android:color/white"
    android:paddingRight="@dimen/margin_8dp" >

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_1dp"
        android:layout_above="@+id/lv_popwindow"
        android:background="@color/grey" />

    <ListView
        android:id="@+id/lv_popwindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_popwindow_bottom"
        android:layout_below="@+id/top_layout"
        android:divider="@null"
        android:background="@android:color/white"
         >
    </ListView>


    <TextView
        android:id="@+id/tv_popwindow_bottom"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_8dp"
        android:gravity="center"
        android:padding="@dimen/margin_8dp"
        android:text="退出"
        android:textColor="@color/skyblue"
        android:textSize="@dimen/txt_size_14sp" />

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin"
        android:background="@color/grey" >

        <TextView
            android:id="@+id/totle_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/count_money"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_size_14sp" />

        <TextView
            android:id="@+id/delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_back_normal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin"
            android:paddingLeft="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin"
            android:text="@string/delete_all"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_14sp" />
    </RelativeLayout>

</RelativeLayout>