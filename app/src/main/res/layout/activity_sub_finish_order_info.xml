<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linlayout_style">
    <LinearLayout
    style="@style/linlayout_style" >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pay_order_status"
           style="@style/orderInfoFinishTitle" />
        <View
            style="@style/ViewStyle"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/order_num"
            style="@style/orderInfoFinishContent"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/order_clie_name"

            style="@style/orderInfoFinishContent"
             />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pay_order_name"
            style="@style/orderInfoFinishContent"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/pay_order_money"
            style="@style/orderInfoFinishContent"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/order_address"
            style="@style/orderInfoFinishContent"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/order_time"
            style="@style/orderInfoFinishContent"
            />

        <View
            style="@style/ViewStyle"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:orientation="horizontal" >

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/pay_money"
                style="@style/orderInfoFinishButton"
                android:text="再次付款"
                 />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/back_order"
                style="@style/orderInfoFinishButton"
                android:text="返回订餐"
                />
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/query_order"
            style="@style/orderInfoFinishButton"
            android:text="查看订单详情"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>
